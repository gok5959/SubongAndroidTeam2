<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/DeepSkyBlue">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ctl_LogoAndBack_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_only_logo"
            android:layout_width="65dp"
            android:layout_height="66dp"
            android:src="@drawable/onlylogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_logo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RedMushRoom\nin subong"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/iv_only_logo"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn_back_to_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BACK > "
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/DeepSkyBlue"
            android:textColor="@color/white"
            style="@style/Widget.AppCompat.Button.Borderless"/>


        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/tv_logo_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_signin"
            android:layout_marginTop="45dp"/>

        <TextView
            android:id="@+id/tv_signin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="회원 가입"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/tv_logo_name"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="40sp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/tv_logo_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_signin"
            android:layout_marginTop="45dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ctl_signin_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ctl_LogoAndBack_container"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp">

        <EditText
            android:id="@+id/text_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="아이디 입력"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:id="@+id/text_pw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="비밀번호 입력"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@id/text_id"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:id="@+id/text_pw_re"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="비밀번호 재입력"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@id/text_pw"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:id="@+id/text_nickname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="닉네임 입력"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@id/text_pw_re"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:id="@+id/text_pnum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="전화번호 입력"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@id/text_nickname"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <RadioGroup
            android:id="@+id/radiogroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_pnum"
            app:layout_constraintBottom_toTopOf="@id/btn_next_to_sign_up"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            >

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/btn_choice_sex_boy"
                android:checked="true"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:button="@null"
                android:background="@drawable/select_radio_button_background"
                android:textColor="@drawable/select_radio_button_text"
                android:text="남성"
                android:textAlignment="center"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:paddingVertical="0dp"
                />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/btn_choice_sex_girl"
                android:checked="false"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:button="@null"
                android:background="@drawable/select_radio_button_background"
                android:textColor="@drawable/select_radio_button_text"
                android:text="여성"
                android:textAlignment="center"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:paddingVertical="0dp"
                />

        </RadioGroup>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_next_to_sign_up"
            android:layout_width="0dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/radiogroup"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/circle"
            android:text="다 음"
            android:textColor="@color/white"
            app:layout_constraintWidth_percent="0.7"/>



    </androidx.constraintlayout.widget.ConstraintLayout>






</androidx.constraintlayout.widget.ConstraintLayout>